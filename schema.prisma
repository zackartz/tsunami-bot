datasource db {
  // could be postgresql or mysql
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator db {
  provider = "go run github.com/prisma/prisma-client-go"
  // set the output folder and package name
  // output           = "./your-folder"
  // package          = "yourpackagename"
}

model Role {
  ID                   String       @id
  Name                 String
  Emoji                String
  EmojiID              BigInt
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
  RoleMessage          RoleMessage? @relation(fields: [roleMessageMessageID], references: [MessageID])
  roleMessageMessageID BigInt?
}

model RoleMessage {
  ChannelID BigInt
  GuildID   BigInt
  MessageID BigInt   @id
  Roles     Role[]
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
}
